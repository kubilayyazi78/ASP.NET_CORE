@model Northwind.MvcWebUI.Models.ProductListViewModel
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <title>Title</title>
</head>
<body>
    <div>
        <table>
            <tr>
                <td>Product Name</td>
                <td>Unit Price</td>
                <td>Unit In Stock</td>
            </tr>
               @foreach(var product in Model.Products )
               {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitsInStock</td>
            </tr>
               }
        </table>
    </div>
</body>
</html>
